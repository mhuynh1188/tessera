# Hex-App Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==========================================
# DEPLOYMENT ENVIRONMENT
# ==========================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Development Database (optional separate instance)
NEXT_PUBLIC_SUPABASE_URL_DEV=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY_DEV=your_dev_anon_key_here
SUPABASE_SERVICE_ROLE_KEY_DEV=your_dev_service_role_key_here

# ==========================================
# SENDGRID EMAIL CONFIGURATION
# ==========================================
# Get API key from SendGrid dashboard
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Tessera Team"

# Email templates (optional customization)
SENDGRID_TEMPLATE_OTP=d-your_otp_template_id
SENDGRID_TEMPLATE_WELCOME=d-your_welcome_template_id
SENDGRID_TEMPLATE_PASSWORD_RESET=d-your_reset_template_id

# ==========================================
# LIVEBLOCKS (REAL-TIME COLLABORATION)
# ==========================================
# Get from Liveblocks dashboard
LIVEBLOCKS_SECRET_KEY=sk_your_liveblocks_secret_key
NEXT_PUBLIC_LIVEBLOCKS_PUBLIC_KEY=pk_your_liveblocks_public_key

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
# Generate a random string for JWT signing
NEXTAUTH_SECRET=your_very_long_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# Admin access control
ADMIN_EMAILS=admin@yourdomain.com,admin2@yourdomain.com

# Rate limiting (if using Redis)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ==========================================
# ANALYTICS & MONITORING (OPTIONAL)
# ==========================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error monitoring
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn.ingest.sentry.io/

# ==========================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ==========================================
# OpenAI for AI features
OPENAI_API_KEY=sk-your_openai_api_key_here

# Stripe for payments (future feature)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ==========================================
# FEATURE FLAGS
# ==========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true
NEXT_PUBLIC_ENABLE_SCENARIOS=true

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Set to true to enable debug logging
DEBUG_MODE=false
NEXT_PUBLIC_DEBUG_MODE=false

# Mock email sending in development
MOCK_EMAIL_SENDING=true
