{
  "buildCommand": "cd hex-app && npm run build",
  "outputDirectory": "hex-app/.next",
  "installCommand": "cd hex-app && npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "hex-app/src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}